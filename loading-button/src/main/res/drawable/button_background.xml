<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FF6200EE"/> <!-- Change color to your primary button color -->
            <stroke android:width="2dp" android:color="#AA000000" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FF3700B3"/> <!-- Default color -->
            <stroke android:width="2dp" android:color="#66000000" />
        </shape>
    </item>
</selector>
